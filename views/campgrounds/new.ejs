<% include ../partials/header %>

	<div class="row">
		<h1 style="text-align: center">Add a New Campground</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action= "/campgrounds" method= "POST"> 
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="name">
				</div>
				<div class="form-group">
				   <input class="form-control" type="text" name="image" placeholder="image URL">
				</div>
				<div class="form-group">
 					 <input class="form-control" type="number" name="cost" placeholder="cost" step="0.01" min="0" required>
						</div>
				<div class="form-group">
				   <input class="form-control" type="text" name="description" placeholder="description">
				</div>
				<div class="form-group">
				   <button class="btn btn-lg btn-primary btn-default btn-block">Submit</button>
				</div>
				
			</form>
			<a href="/campgrounds">Go to Campgrounds</a>
		</div>	
	</div>



<% include ../partials/footer %>
